# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[*.{kt, kts}]
disabled_rules = experimental:no-empty-first-line-in-method-block, no-blank-line-before-rbrace
kotlin_imports_layout = ascii
